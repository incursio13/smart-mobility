<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.its.intravtasdriver.activity.RegistrationActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways"
        >

        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Data angkot" />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_below="@+id/toolbar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/plat_nomor"
        android:hint="Plat Nomor"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/plat_nomor"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/harga"
        android:hint="Harga"
        />


    <EditText
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/harga"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/route"
        android:hint="Rute"
        />

    <Button
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/next_regis"
        android:textColor="@color/colorPrimaryText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/route"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:text="Lanjut"
        android:visibility="gone" />

</RelativeLayout>
